{
  "name": "rescript-blurhash",
  "version": "0.3.0",
  "description": "BlurHash implementation in ReScript language",
  "keywords": [
    "BuckleScript",
    "ReScript",
    "BlurHash"
  ],
  "author": "Armedi",
  "license": "MIT",
  "homepage": "https://github.com/armedi/rescript-blurhash#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/armedi/rescript-blurhash.git"
  },
  "unpkg": "dist/production.min.js",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "bundle": "npm run build && npx esbuild --bundle lib/js/browser.js --outfile=dist/production.min.js --global-name=BlurHash --minify",
    "prepublishOnly": "npm run bundle"
  },
  "devDependencies": {
    "bs-platform": "^8.2.0",
    "esbuild": "^0.7.19"
  },
  "files": [
    "bsconfig.json",
    "src/*.re*",
    "src/externals.js",
    "dist/production.min.js"
  ]
}
